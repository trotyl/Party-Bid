header.header
  label.nav-title 竞价
    span {{number_of_bid}}
    span {{count_of_records}} 
  button.button.button-rounded.button-highlight.header-left-trotyl(ng-click="back_to_bid()") 返回
  button.button.button-rounded.button-action.header-right-trotyl(ng-click="end_bid()",ng-disabled="can_not_stop") 结束

#bid.content
  .container
    ul.list-group.bg-huise
      li.list-group-item(ng-repeat="record in record_list | orderBy:'+index'") 
        table(cellspacing="10",cellpadding="10")
          tr
            td(rowspan="2") {{record.index + ".&nbsp;&nbsp;&nbsp;&nbsp;"}}
            td {{record.name}}
          tr
            td {{record.phone}}

