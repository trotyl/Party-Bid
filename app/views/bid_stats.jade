header.header
  label.nav-title 竞价
    span {{number_of_bid}}
    span {{record_list.length | count}} 
  a.button.button-rounded.button-highlight.leftside(back='{{this_activity.name}}')
  button.button.button-rounded.button-action.rightside(ng-click="go_to_result()") 列表

.content
  .container
    ul.list-group
      li.list-group-item(ng-repeat="record in record_list | orderBy:'+price'") {{record.price | currency:"¥"}}
        span.pull-right {{record.count}}

include ./components/footer_result.jade
