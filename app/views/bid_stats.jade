header.header
  label.nav-title 竞价
    span {{number_of_bid}}
    span {{count_of_records}} 
  button.button.button-rounded.button-highlight.header-left-trotyl(ng-click="back_to_bid()") 返回
  button.button.button-rounded.button-action.header-right-trotyl(ng-click="navigate_to_result()") 列表

.content
  .container
    ul.list-group
      li.list-group-item(ng-repeat="record in record_list | orderBy:'+price'") 
        span.pull-right {{record.price | currency:"¥"}}
        table(cellspacing="10",cellpadding="10")
          tr
            td(rowspan="2") {{($index + 1).toString() + ".&nbsp;&nbsp;&nbsp;&nbsp;"}}
            td {{record.name}}
          tr
            td {{record.phone}}

footer
